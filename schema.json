{
    "title":"categories",
    "type":"object",
    "patternProperties":{
        "[\\w| |']+":{
            "title":"category",
            "type":"object",
            "properties":{
                "Meta":{
                    "type":"boolean"
                }
                "Parents":{
                    "type":"array",
                    "item":{
                        "type":"string"
                    }
                },
                "Children":{
                    "type":"array",
                    "item":{
                        "type":"string"
                    }
                },
                "Properties":{
                    "title":"property",
                    "type":"object",
                    "patternProperties":{
                        "P[0-9]+":{
                            "type":"object",
                            "properties":{
                                "Value":{
                                    "type":"string",
                                    "pattern":"(\\+[0-9]+-[0-9]+-[0-9]+T[0-9]+:[0-9]+:[0-9]+Z\/[0-9]+)|(Q[0-9]+)|(^$)"
                                },
                                "Timestamp":{
                                    "type":"string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
